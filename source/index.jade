- PUBLIC_URL = "https://www.patientbank.us"

doctype html
html(lang="en")
  head
    block title
      title PatientBank | Own Your Health
    link(href="/images/favicon.ico" rel="shortcut icon")
    meta(charset="utf-8")
    meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
    meta(content='width=device-width, initial-scale=1, maximum-scale=2' name='viewport')
    meta(name="description" content="PatientBank is a health record bank that makes it easy to gather and share medical records. Doctors and patients use PatientBank to simplify medical record exchange.")
    meta(name="keywords" content="health records,medical records,health information,personal health record,records intake")

    link(rel="stylesheet" href="/css/application.css")

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
