      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-53777563-3', 'auto');
      ga('send', 'pageview');

  body
    include ./includes/header.jade

    .support
      .support-header
        .wrapper
          a(href="/")
            h1
              | PatientBank Support 
              small How can we help?
      block content
        .support-choices
          .wrapper
            .row
              .col-sm-6
                a(href="/patient").support-choice.patient
                  img(src="/images/patient.png")
                  span Patient FAQ
              .col-sm-6
                a(href="/intake").support-choice.intake
                  img(src="/images/intake.png")
                  span Intake FAQ

      block contact
        hr
        .contact#contact
          .contact-header
            a(title="contact")
            h4 Still can't find an answer?
            h5 Get in touch with us.
          include ./includes/contact-info.jade

    include ./includes/footer.jade

